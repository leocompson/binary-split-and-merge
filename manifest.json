{
  "version": "0.1.0",
  "manifest_version": 2,
  "offline_enabled": true,
  "name": "Binary Split & Merge",
  "short_name": "binary-split-and-merge",
  "permissions": ["storage", "downloads"],
  "background": {"scripts": ["lib/background.js"]},
  "homepage_url": "https://mybrowseraddon.com/binary-split-and-merge.html",
  "description": "Easily split or merge files via binary data buffer (ArrayBuffer) in your browser!",
  "browser_action": {
    "default_title": "Binary Split & Merge",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
